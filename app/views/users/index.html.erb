<%= provide(:title, "Users") %>
<h1>Users</h1>

  <% @Users.each do |user| %>
  <li><%= gravatar_for(user, size: 20 ) %>  
      <%= link_to user.name, user %> - <%= user.email %>  
    
    <% if current_user.admin? && !current_user?(user)%>
      
      | <%= link_to ":delete user", user, method: :delete, class:"btn btn-mini btn-danger",
                                  data: { confirm: "You sure?" } %>      
    <% end %> 
    <% if current_user.admin? %>
      | <% if user.admin? %> 
          <%= "Admin user"%>
        <% else %> 
          <%= "Not Admin" %> 
        <% end %>
    <% end %> 
  </li>
  </br>
  <% end %>