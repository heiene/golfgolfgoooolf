<%= provide( :title, 'Sign in' ) %>
<h1>Sign in</h1>

 <%= form_for(:session, url: sessions_path) do |f| %>

<%= f.label :email %>
<%= f.text_field :email %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= label_tag :remember_me %>
<%= check_box_tag :remember_me, 1, params[:remember_me] %>

<%= f.submit "Sign in", class:"btn" %>

<% end %>